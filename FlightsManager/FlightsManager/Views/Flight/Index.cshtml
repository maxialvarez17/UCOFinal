@model IEnumerable<FlightsManager.DataTransferObjects.Entities.Flights.FlightDTO>

@{
    ViewBag.Title = "Flights Manager";
}

<h2>Flights</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            From
        </th>
        <th>
            To
        </th>
        <th>
            Aircraft
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AirportFrom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AirportTo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aircraft)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
